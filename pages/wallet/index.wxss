.container{
  display: flex;
  flex-direction: column;
  background: #c0c0c0;
}
.moneymsg{
  background-color: #fff;
  text-align: center;
  padding: 30rpx 0 30rpx 0;
  margin-bottom: 30rpx;
}
.moneymsg view:first-child{
  /* font-size: 26rpx; */
}
.moneymsg view{
  font-size: 26rpx;
}
.moneymsg .money-number{
  margin: 40rpx 0;
}
.money-number text{
  font-size: 60rpx;
  font-weight: bold;
}
.balance text{
  /* display: block;  */
  border: 2rpx solid #888;
  padding: 6rpx 30rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}
.chargebtn{
  width: 90%;
  background: #b9dd08;
  font-size: 34rpx;
}
.cardnumber,.deposit,.ofo-about{
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  font-size: 34rpx;
}
.cardnumber{
  margin-top: 20rpx;
}
.deposit{
  margin-top: 2rpx;
}
.deposit .depositnumber{
  color: #b9dd08;
}
.ofo-about{
  margin-top: 40rpx;
}